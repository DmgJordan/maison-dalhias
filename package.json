{
  "name": "maison-dalhias",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "npm run dev -w @maison-dalhias/web",
    "dev:api": "npm run start:dev -w @maison-dalhias/api",
    "build": "npm run build -w @maison-dalhias/web && npm run build -w @maison-dalhias/api",
    "build:web": "npm run build -w @maison-dalhias/web",
    "build:api": "npm run build -w @maison-dalhias/api",
    "preview": "npm run preview -w @maison-dalhias/web",
    "db:generate": "npm run prisma:generate -w @maison-dalhias/api",
    "db:migrate": "npm run prisma:migrate -w @maison-dalhias/api",
    "db:push": "npm run prisma:push -w @maison-dalhias/api",
    "db:studio": "npm run prisma:studio -w @maison-dalhias/api",
    "lint": "eslint apps/",
    "lint:fix": "eslint apps/ --fix",
    "format": "prettier --write \"apps/**/*.{ts,vue,js,json}\"",
    "format:check": "prettier --check \"apps/**/*.{ts,vue,js,json}\"",
    "typecheck": "npm run typecheck:web && npm run typecheck:api",
    "typecheck:web": "vue-tsc -b --noEmit -p apps/web/tsconfig.app.json",
    "typecheck:api": "tsc --noEmit -p apps/api/tsconfig.json",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/**/*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/**/*.{js,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  }
}
